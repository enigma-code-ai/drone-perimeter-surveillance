[flake8]
max-line-length = 88
extend-ignore =
    E203,
    E501,
    W503,
    W504,
    E722,
    D100,
    D101,
    D102,
    D103,
    D104,
    D105

exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    install,
    log,
    logs,
    .mypy_cache,
    .pytest_cache,
    .eggs,
    *.egg

per-file-ignores =
    __init__.py:F401,F403
    **/launch/*.py:E402
    test_*.py:D
    **/scripts/*.py:D100,D103

max-complexity = 15
docstring-convention = google
import-order-style = google

builtins =
    _

extend-exclude =
    cad/,
    docs/,
    *.sdf,
    *.urdf,
    *.xacro
