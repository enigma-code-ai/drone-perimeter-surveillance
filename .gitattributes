# Set default behavior to automatically normalize line endings
* text=auto

# Source code files should use LF line endings
*.py text eol=lf
*.cpp text eol=lf
*.hpp text eol=lf
*.c text eol=lf
*.h text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.launch text eol=lf
*.urdf text eol=lf
*.xacro text eol=lf

# ROS2 specific files
*.cfg text eol=lf
*.msg text eol=lf
*.srv text eol=lf
*.action text eol=lf
package.xml text eol=lf
setup.py text eol=lf
setup.cfg text eol=lf

# Shell scripts should use LF
*.sh text eol=lf
*.bash text eol=lf

# Windows specific files should use CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files should not be touched
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary
*.so binary
*.dll binary
*.exe binary

# Build artifacts should be ignored
build/ export-ignore
install/ export-ignore
log/ export-ignore